{
  "expo": {
    "name": "DailyDiary",
    "slug": "dailydiary",
    "scheme": "dailydiary",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/icon.png",

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#660B05",
      "dark": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#3E0703"
      }
    },
    "android": {
      "package": "com.init_0.dailydiary",
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "backgroundColor": "#660B05"
      }
    },
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We use your photo library to attach pictures to your diary entries.",
        "NSCameraUsageDescription": "We use your camera to take photos for your diary entries."
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#660B05",
          "dark": {
            "backgroundColor": "#3E0703"
          }
        }
      ],
      "expo-secure-store",
      "expo-image-picker"
    ]
  }
}
